<section class="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-xs-12 contact_content">       
        <h2 class="contactheader">CONTACT</h2>
        <p class="contacttext faqref">Have you checked out our <a href="/about#FAQ" class="faqlink">FAQ Page</a>?</p>
        <p class="contacttext askus">Didn't find the answer to your question?
        </br>Just ask us here!</p>
        <div class="row">
          <div class="col-md-12 col-xs-12 contactcol">
            <div class="contactbox">
              <form class="form-horizontal personalinfo">
                  <div class="form-group">
                      <label for="exampleInputName2">Your Name</label>
                      <input type="text" class="form-control" id="exampleInputNumber2" placeholder="">
                  </div><!--closes form-group-->
                  <div class="form-group">
                      <label for="exampleInputName2">Your Email</label>
                      <input type="text" class="form-control" id="exampleInputNumber2" placeholder="">
                  </div><!--closes form-group-->
              </form><!--closes .personalinfo-->
              <div class="longforms">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="exampleInputEmail1">How did you hear of us?</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="">
                    </div><!--closes .form-group-->        
                </form><!--closes form-horizontal-->
                <span>Your Message:</span>
                <textarea class="form-control" rows="6">
                </textarea>
                <button type="submit" class="btn btn-default btn-contact">Submit</button>
              </div><!--closes .longforms-->
            </div><!--closes .contactbox-->
          </div><!--closes .contactcol-->
        </div><!--closes .row-->
      </div><!--closes .contact_content-->
    </div><!--closes .row-->
  </div><!--closes .container-fluid-->
</section>